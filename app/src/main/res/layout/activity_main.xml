<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rotasi"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/btnRotasi"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/btnmove"
        android:layout_alignTop="@+id/btnZoom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Match"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/btnMatch"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/btnRotasi"
        android:layout_alignLeft="@+id/btnZoom"
        android:layout_alignStart="@+id/btnZoom" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zoom"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/btnZoom"
        android:layout_above="@+id/btnMatch"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bounce"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/btnBounce"
        android:layout_alignTop="@+id/btnMatch"
        android:layout_alignLeft="@+id/btnRotasi"
        android:layout_alignStart="@+id/btnRotasi" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/i5"
        android:layout_gravity="center_horizontal"
        android:id="@+id/image"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
